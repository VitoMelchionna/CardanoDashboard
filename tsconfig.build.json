{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ESNext",
		"moduleResolution": "Node",
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"noEmitOnError": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"exclude": ["node_modules", "dist"]
}
